@model IEnumerable<StudentInformationManagementSystem.Models.StudentCourse>

<h2>My Courses</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Course Code</th>
            <th>Course Name</th>
            <th>Grade</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Course.CourseCode</td>
                <td>@item.Course.CourseName</td>
                <td>@(string.IsNullOrEmpty(item.Grade) ? "Not Graded" : item.Grade)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.StudentCourseId" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
