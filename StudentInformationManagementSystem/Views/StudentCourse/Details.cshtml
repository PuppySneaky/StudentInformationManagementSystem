@model StudentInformationManagementSystem.Models.CourseViewModel

@{
    ViewData["Title"] = "Course Details";
}

<h2>Course Details</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@Model.CourseName (@Model.CourseCode)</h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Description:</div>
                    <div class="col-md-8">@Model.Description</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Credit Hours:</div>
                    <div class="col-md-8">@Model.CreditHours</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Grade:</div>
                    <div class="col-md-8">
                        @if (Model.Grade == "Not Graded")
                        {
                            <span class="badge bg-secondary">Not Graded</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@Model.Grade</span>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Enrollment Date:</div>
                    <div class="col-md-8">@Model.EnrollmentDate.ToString("yyyy-MM-dd")</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to My Courses</a>
</div>
